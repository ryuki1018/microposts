 <% if microposts.any? %>
        <ul clas="list-unstyled">

    
<% microposts.each do |micropost| %>    
            <li class="media">
                <img class="mr-2 rounded" src="
    <%= gravatar_url(micropost.user, { size: 50 }) %>
    " alt="">
    
                <div class="media-body">
                    <div>
    <%= micropost.user.name %>
                    </div>
                    <div>
                        <p>
    <%= micropost.content %>
                        </p>
                    </div>
                </div>
                
            </li>
<% end %>
        
    </ul>
    
<%= paginate microposts %>

<% end %>